{
  "compilerOptions": {
    "module": "CommonJS", 
    "target": "ES2022",
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
